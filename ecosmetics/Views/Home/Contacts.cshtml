        <h1>@Localizer["Контакти"]</h1>

        <ul>
            <li><a asp-controller="Home" asp-action="index">@Localizer["Начало"]</a></li>
            <li><p>@Localizer["Контакти"]</p></li>
        </ul>
    </div>

    <section class="contacts-main">
        <div class="info">
            <div>
                <h2 id="contacts-info-p">@Localizer["Контакти"]</h2>
            </div>
       
        </div>

        <div class="contacts-down">
            <ul>
                <li>@Localizer["Телефон"]<a href="tel:+359897779974">+359897779974</a></li>
                <li>@Localizer["Имейл"]<a href="mailto:office@elizabeth-cosmetics.com">office@elizabeth-cosmetics.com</a></li>
