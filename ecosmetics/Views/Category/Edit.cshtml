@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ecosmetics.Services.Categories.Models.EditCategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="edit-category-wrapper">
    <section class="category-container">
        <h2>@Localizer["Промени Категория"]</h2>

        <form class="category-form" asp-area="" asp-controller="category" asp-action="EditAsync" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger "></div>

            <div>
                <label asp-for="Name" class="control-label font-weight-bold">@Localizer["Заглавие на Български език"]</label>
                <input asp-for="Name" class="font-weight-bold form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="NameEn" class="control-label font-weight-bold">@Localizer["Заглавие на Английски език"]</label>
                <input asp-for="NameEn" class="font-weight-bold form-control">
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>

            <div class="">
                <label asp-for="Description" class="control-label font-weight-bold">@Localizer["Съдържание на Български език"]</label>
                <textarea asp-for="Description" class="font-weight-bold form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger "></span>
            </div>

            <div class="">
                <label asp-for="DescriptionEn" class="control-label font-weight-bold">@Localizer["Съдържание на Английски език"]</label>
                <textarea asp-for="DescriptionEn" class="font-weight-bold form-control"></textarea>
                <span asp-validation-for="DescriptionEn" class="text-danger "></span>
            </div>

            @*<div class="form-group">
                <label asp-for="Picture" class="">Upload Picture </label>
                <input asp-for="Picture" hidden accept=".gif,.png,.jpg,.jpeg" />
                <span asp-validation-for="Picture" class=""></span>
            </div>*@

            <div class="button">
                <button class="white-button">@Localizer["Запази"]</button>
            </div>
        </form>
    </section>
</section>