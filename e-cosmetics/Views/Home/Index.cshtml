@model e_cosmetics.Services.Categories.Models.CategoriesCollectionViewModel

@{
    ViewData["Title"] = "Elizabet Cosmetics";
}

    <section class="site-wrapper">
        <aside class="aside">

            <ul>
                <li><p>beauty</p></li>
                <li><p>about</p></li>
                <li><p>truth</p></li>
                <li><p>The</p></li>
            </ul>
        </aside>
      
        <section class="site-banner">

            <!-- Slideshow container -->
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/model4.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img//banner.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/model5.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </section>

    </section>

<section class="categories-wrapper" id="series">

    <div class="categories">
        <section class="black-box-title">
            <h2>Series</h2>
            <p class="sub-title">Popular</p>
        </section>
        @if (this.User.Identity.IsAuthenticated)
        {
        
        }
        <section class="black-box-content">

            @foreach (var category in Model.Categories)
            {
                <a class="category" asp-controller="Category" asp-action="GetById" asp-route-id="@category.Id">
                    <div class="image-wrapper">
                        <span><img src="@category.Picture.Url" class="category-picture" width="250" height="250" /></span>
                    </div>
                    @*<p class="category-description">@category.Description</p>*@
                    @*<p class="category-name">@category.Name</p>*@

                    @*<a class="button custom-underline" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>*@
                    @*<a class="button custom-underline" asp-controller="category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>*@
                </a>
            }

        </section>
    </div>
</section>