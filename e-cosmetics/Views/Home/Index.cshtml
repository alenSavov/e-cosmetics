@model e_cosmetics.Services.Categories.Models.CategoriesCollectionViewModel



@{
    ViewData["Title"] = "Elizabet Cosmetics";
}


<section class="site-wrapper">
    <aside class="aside">

        <ul>
            <li><p>beauty</p></li>
            <li><p>about</p></li>
            <li><p>truth</p></li>
            <li><p>The</p></li>
        </ul>
    </aside>

    <section class="site-banner">

        <!-- Slideshow container -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active slide-pic-1">
                    <img class="slide-pic-1 d-block w-100" src="~/img/slider-pic-2.jpg" alt="First slide">

                </div>
                <div class="carousel-item">
                    <img class="slide-pic-2 d-block w-100" src="~/img/slider-pic-1.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="slide-pic-3 d-block w-100" src="~/img/unsplash-6.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </section>

</section>
<p class="content-over-banner animated zoomIn delay-2s">THE TRUTH</p>
<p class="content-over-banner2 animated zoomIn delay-2s">ABOUT BEAUTY</p>
<section class="categories-wrapper" id="series">

    <div class="categories">
        <section class="black-box-title">
            <h2>Серии</h2>
            <p class="sub-title">Popular</p>
        </section>
        @if (this.User.Identity.IsAuthenticated)
        {

        }
        <section class="black-box-content">

            @foreach (var category in Model.Categories)
            {
                <a class="category" asp-controller="Category" asp-action="GetById" asp-route-id="@category.Id">
                    <div class="image-wrapper">
                        <span><img src="@category.Picture.Url" class="category-picture" width="250" height="250" /></span>
                    </div>
                    @*<p class="category-description">@category.Description</p>*@
                    @*<p class="category-name">@category.Name</p>*@

                    @*<a class="button custom-underline" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>*@
                    @*<a class="button custom-underline" asp-controller="category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>*@
                </a>
                @if (this.User.Identity.IsAuthenticated)
                {
                    @if (this.User.IsInRole(GlobalConstants.ADMINISTRATOR_ROLE))
                    {
                        <a class="button button-primary" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                        <a class="button button-primary" asp-controller="category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    }
                }
            }

        </section>
    </div>
</section>