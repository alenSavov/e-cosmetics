@{
    ViewData["Title"] = "Home Page";
}

<section class="site-wrapper">
    <section class="social-links">
        <p class="link-fb"><a href="https://www.facebook.com">FACEBOOK</a></p>
        <p class="link-twitter"><a href="https://www.facebook.com">TWITTER</a></p>
        <p class="link-instagram"><a href="https://www.facebook.com">INSTAGRAM</a></p>

    </section>

    <section class="site-banner">
        @*<img src="~/img//banner.jpg" alt="Alternate Text" />*@
        <!-- Slideshow container -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img//0b8656d3-a2be-453f-abfb-cd0459505a93_XT203583.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img//banner.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img//b2cb8be0-96ce-482b-99dd-ddb8b0077fd6_XT203588.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </section>

    <section class="aside-right">
        <p class="slogan-part-1"><span>The</span></p>
        <p class="slogan-part-2"><span>truth</span></p>
        <p class="slogan-part-3"><span>about</span></p>
        <p class="slogan-part-4"><span>beauty</span></p>
    </section>
</section>