@model e_cosmetics.Services.Article.Models.ArticleInputModel
@{
    ViewData["Title"] = "Create Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="template-wrapper">

    <section class="template-container">

        <h2>Create Article</h2>
        <form asp-area="" asp-controller="Category" asp-action="Create" class="" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger "></div>

            <div>
                <label asp-for="Title" class=""></label>
                <input asp-for="Title" class="">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="">
                <label asp-for="Content" class=""></label>
                <textarea asp-for="Content" class=""></textarea>
                <span asp-validation-for="Content" class=""></span>
            </div>

            <div class="form-group">
                <label asp-for="ArticlePicture" class="">Upload Picture </label>
                <input asp-for="ArticlePicture" hidden accept=".gif,.png,.jpg,.jpeg" />
                <span asp-validation-for="ArticlePicture" class=""></span>
            </div>

            <div class="button">
                <button class="btn">Create</button>
            </div>

        </form>
    </section>
</section>